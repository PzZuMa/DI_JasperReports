<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="682.0" prefWidth="621.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.retoconjuntohibernate.controller.InfoController">
   <center>
      <VBox alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </BorderPane.margin>
         <children>
            <Label fx:id="tituloID" text="TITULO">
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="38.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="592.0" prefWidth="571.0">
               <children>
                   <VBox alignment="CENTER_LEFT" prefHeight="514.0" prefWidth="200.0" spacing="10.0">
                       <children>
                           <Label text="Titulo" />
                        <TextField fx:id="tvTitle" editable="false" />
                           <Label text="Genero" />
                        <TextField fx:id="tvGenre" editable="false" />
                           <Label text="Año" />
                        <TextField fx:id="tvYear" editable="false" />
                           <Label text="Descripción" />
                           <TextArea fx:id="tvDescripcion" editable="false" prefHeight="127.0" prefWidth="200.0" wrapText="true" />
                        <Label text="Director" />
                        <TextField fx:id="tvDirector" editable="false" />
                        <Label text="Estado" />
                        <ComboBox fx:id="cbEstado" maxWidth="1.7976931348623157E308" />
                        <Label text="Soporte" />
                        <ComboBox fx:id="cbSoporte" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
                           <HBox alignment="CENTER" prefHeight="45.0" prefWidth="200.0" spacing="10.0">
                               <children>
                                   <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#salir" text="Volver" textAlignment="CENTER" />
                                   <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#save" text="Guardar" />
                               </children>
                               <VBox.margin>
                                   <Insets top="25.0" />
                               </VBox.margin>
                           </HBox>
                       </children>
                   </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
